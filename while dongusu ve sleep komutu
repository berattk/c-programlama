#include <stdio.h>
#include <unistd.h>

int main(){
    int k = 0, yon = 1;
    char harf;

    printf("Karakter giriniz: ");
    scanf(" %c", &harf);

    while(1){
        for(int i=0; i<k; i++) printf(" ");
        printf("%c\n", harf);

        k += yon;
        if(k >= 30) yon = -1;
        if(k <= 0) yon = 1;

        usleep(10000);
    }
    return 0;
}
